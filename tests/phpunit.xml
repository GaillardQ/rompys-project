<phpunit bootstrap="src/autoload.php">
    <testsuites>
        <testsuite name="money">
            <file>../src/FrontEnd/FrontOffice/tests/UserControllerTest.php</file>
        </testsuite>
    </testsuites>
    
    <filter>
        <whitelist>
            <directory suffix=".php">../src/FrontEnd</directory>
            <directory suffix=".php">../src/BackEnd</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="../../build/coverage" title="Rompy's Project"
             charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../build/logs/clover.xml"/>
        <log type="junit" target="../../build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>