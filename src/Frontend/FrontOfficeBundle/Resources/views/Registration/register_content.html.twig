{% trans_default_domain 'templatesTranslations' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_registration_register" role="form">
    <div class="block-content">
        <fieldset>
            <legend>{{ 'register.title'|trans }}</legend>
            {% if not form.vars.valid %}
            <div class="alert alert-block alert-danger fade in">
                {% if form_errors(form.username) is not null %}
                    {{ form_errors(form.username) }}
                {% endif %}
                {% if form_errors(form.firstname) is not null %}
                    {{ form_errors(form.firstname) }}
                {% endif %}
                {% if form_errors(form.lastname) is not null %}
                    {{ form_errors(form.lastname) }}
                {% endif %}
                {% if form_errors(form.phone) is not null %}
                    {{ form_errors(form.phone) }}
                {% endif %}
                {% if form_errors(form.email) is not null %}
                    {{ form_errors(form.email) }}
                {% endif %}
                {% if form_errors(form.plainPassword.first) is not null %}
                    {{ form_errors(form.plainPassword.first) }}
                {% endif %}
                {% if form_errors(form.plainPassword.second) is not null %}
                    {{ form_errors(form.plainPassword.second) }}
                {% endif %}

            </div>
            {% endif %}
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-5 col-md-5 col-lg-5">{{ form_label(form.username) }}</label>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-5 col-md-5 col-lg-5">{{ form_label(form.firstname) }}</label>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-5 col-md-5 col-lg-5">{{ form_label(form.lastname) }}</label>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-5 col-md-5 col-lg-5">{{ form_label(form.phone) }}</label>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-5 col-md-5 col-lg-5">{{ form_label(form.email) }}</label>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-5 col-md-5 col-lg-5">{{ form_label(form.plainPassword.first) }}</label>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-5 col-md-5 col-lg-5">{{ form_label(form.plainPassword.second) }}</label>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            
        
            <div class="row">
                <div class="col-xs-0 col-sm-5 col-md-5 col-lg-5"></div>
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
                    <div class="row">
                        <button class='btn btn-primary col-xs-12 col-sm-12 col-md-12 col-lg-12' type="submit">{{ 'register.button.submit'|trans }}</button>
                        <a href={{ path('frontend_frontoffice_homepage') }} class="btn btn-default col-xs-12 col-sm-12 col-md-12 col-lg-12"> {{ 'common.go_back'|trans }} </a>
                    </div>
                </div>
            </div>
            
            {{ form_row(form._token) }}
        </fieldset>
    </div>
</form>
