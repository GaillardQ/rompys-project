{% trans_default_domain 'templatesTranslations' %}
<div class="col-sm-12">
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h5 class="panel-title">
    	        <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
    	        &nbsp&nbsp
    	        {{ 'best_sellers.games.title'|trans }}
    	   </h5>
        </div>
        
        <!-- Table -->
        <table id="table-sellers-games" class="table tablesorter">
            <thead>
                <tr>
                    <th class="name">{{ 'best_sellers.games.name'|trans }}</th>
                    <th class="price">{{ 'best_sellers.games.price'|trans }}</th>
                    <th class="plateform hidden-xs">{{ 'best_sellers.games.plateform'|trans }}</th>
                    <th class="photo hidden-xs" data-toggle="tooltip" title="{{ 'best_sellers.games.photo'|trans }}"><span class="glyphicon glyphicon-picture"></span></th>
                    <th class="state hidden-xs">{{ 'best_sellers.games.state'|trans }}</th>
                    <th class="zone hidden-xs hidden-sm">{{ 'best_sellers.games.zone'|trans }}</th>
                    <th class="language hidden-xs">{{ 'best_sellers.games.language'|trans }}</th>
                    <th class="comment visible-lg">{{ 'best_sellers.games.comment'|trans }}</th>
                    <th class="contact" data-toggle="tooltip" title="{{ 'best_sellers.seller.contact'|trans }}">
                        <span class="glyphicon glyphicon-envelope">
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for g in games %}
                <tr>
                    <td class="name" data-toggle="tooltip" title="{{ g.name }}">
                        <a href="{{ path('frontend_frontoffice_game_page', {'id': g.id, 'name':g.name|url_encode}) }}">{{ g.name }}</a>
                    </td>
                    <td class="align-right">{{ g.price }} â‚¬</td>
                    <td class="plateform hidden-xs">{{ g.plateform }}</td>
                    <td class="align-center hidden-xs">
                        {% if g.image is defined and g.image != "" %}
                            <a href="#" onclick="return false;" data-html="true" data-trigger="focus" data-placement="top" data-toggle="popover" title="{{ 'game_card.seller.photo'|trans }}" data-content="<img class='margin-auto' src='/public/pictures/{{ g.image }}' alt='Game picture' />">
                                <span class="glyphicon glyphicon-picture" ></span>
                            </a>
                        {% endif %}
                    </td>
                    <td class="align-center hidden-xs" data-toggle="tooltip" title="{{ g.state|trans }}">
                        {% if g.state_id == 1 %}
                            <span class="glyphicon glyphicon-thumbs-up" ></span>
                            <span class="glyphicon glyphicon-thumbs-up" ></span>
                        {% elseif g.state_id == 2 %}
                            <span class="glyphicon glyphicon-thumbs-up" ></span>
                        {% elseif g.state_id == 3 %}
                            <span class="glyphicon glyphicon-thumbs-down" ></span>
                        {% else %}
                            <span class="glyphicon glyphicon-thumbs-down" ></span>
                            <span class="glyphicon glyphicon-thumbs-down" ></span>
                        {% endif %}
                    </td>
                    <td class="align-center hidden-xs hidden-sm">{{ g.zone }}</td>
                    <td class="align-center hidden-xs">{{ g.language }}</td>
                    <td class="comment align-center visible-lg" data-toggle="tooltip" title="{{ g.comment }}">{{ g.comment }}</td>
                    <td class="align-center">
                        <a href="{{ path('frontend_frontoffice_contact_seller', {'seller': g.user_id, 'game':g.id}) }}">
                            <span class="glyphicon glyphicon-envelope">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>