{% trans_default_domain 'templatesTranslations' %}
<div class="col-sm-12">
    <div class="row">
        <div class="panel panel-primary">
        	<div class="panel-heading">
        	    <h5 class="panel-title">
        	        <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
        	        &nbsp&nbsp
        	        {{ 'game_card.infos.title'|trans }}
        	   </h5>
        	</div>
        	<div class="panel-body no-padding">
        		<div class="col-xs-12 col-sm-6 col-md-3 col-lg-2 game-infos-img">
                    <div>
                        {# Get the first image available #}
                        {% set img = null %}
                        {% if game.image is not null %}
                            {% set img = 'public/pictures/' ~ game.image %}
                        {% else %}
                            {% set img = 'public/img/game_default.png' %}
                        {% endif %}
        	            <img src="{{ img }}" alt="{{ game.name }}" class="img-responsive margin-auto" />
        	        </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-9 col-lg-10 game-infos-div">
                    <h6>{{ game.name }}</h6>
                    <div class="search-game-plateform">
        	            {{ game.plateform_val }}
        	        </div>
        	        <div class="search-game-type">
        	            {{ game.game_type_val|trans }}
        	        </div>
        	        <div class="search-game-editor">
        	            {% if game.editor1 is not null %}
        	                {{ game.editor1 }}
        	                {% if game.editor2 is not null or game.editor3 is not null %}
        	                    &nbsp/&nbsp
        	                {% endif %}
                        {% endif %}
                        {% if game.editor2 is not null %}
        	                {{ game.editor2 }}
        	                {% if game.editor3 is not null %}
        	                    &nbsp/&nbsp
        	                {% endif %}
                        {% endif %}
                        {% if game.editor3 is not null %}
        	                {{ game.editor3 }}
                        {% endif %}
        	        </div>
        	        <div class="search-game-year">
        	            {{ game.releasedYear }}
        	        </div>
        	        <div class="margin-top-20">
        	            <table>
        	               <tr>
        	                   <td>{{ 'game_card.infos.dispo'|trans }}</td>
        	                   <td class="align-right weight-bolder">{{ stats.nb }}</td>
        	               </tr>
        	               <tr>
        	                   <td>{{ 'game_card.infos.min_price'|trans }}</td>
        	                   <td class="align-right weight-bolder">{{ stats.min }}€</td>
        	               </tr>
        	               <tr>
        	                   <td>{{ 'game_card.infos.average_price'|trans }}</td>
        	                   <td class="align-right weight-bolder">{{ stats.avg }}€</td>
        	               </tr>
        	            </table>
        	        </div>
                </div>
        	</div>
        </div>
    </div>
</div>