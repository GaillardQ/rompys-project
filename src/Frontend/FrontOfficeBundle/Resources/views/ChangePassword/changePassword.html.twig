{% extends 'FrontendFrontOfficeBundle::baseMenu.html.twig' %}
{% trans_default_domain 'templatesTranslations' %}

{% block meta %}
    <meta name="description" content="Rompy's Project : mon profil" />
    <meta property="og:description" content="Rompy's Project : mon profil" />
    
    <title>Rompys Project : Modification du mot de passe</title>
    <meta property="og:title" content="Modification du mot de passe" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="public/js/page/profile.js"></script>
{% endblock %}

{% block body %}

    <div id="home" class="row page">
        <div class="col-md-6 col-offset-md-3 col-lg-8 col-lg-offset-2">
            <div id="home-center" class="row home-block home-center-div">
                <div class="panel panel-primary home-panel-center">
                	<div class="panel-body">
                		<div id="home_content">
                			<div class="row">
                			        <fieldset>
                                            <legend class="align-center"><h3>{{ 'profile.password.title'|trans|upper }}</h3></legend>
                                            {% block fos_user_content %}
                                                {{ include ("FOSUserBundle:ChangePassword:changePassword_content.html.twig") }}
                                            {% endblock fos_user_content %}  
                                    </fieldset>
                			</div>
                		</div>
                	</div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

