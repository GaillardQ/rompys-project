{% trans_default_domain 'templatesTranslations' %}


<form action="{{ path("fos_user_security_check") }}" method="post" role="form" class="form-horizontal">
    {% if error %}
        <div class="alert alert-block alert-danger fade in">
            {{ error|trans }}
        </div>
    {% endif %}
    <input type="hidden" name="_csrf_token" value="" />
    <div>
        <!-- <label class="control-label" for="username_email">{{ 'home.login.login.label'|trans }}</label> -->
        <input type="text" id="username_email" name="_username" value="" placeholder="{{ 'home.login.login.placeholder'|trans }}" class="form-control">
    </div>
    <div>
        <!-- <label for="password" class="control-label">{{ 'home.login.password.label'|trans }}</label> -->
        <input type="password" id="password" name="_password" placeholder="{{ 'home.login.password.placeholder'|trans }}" class="form-control">
    </div>
    <div>
        <a class="small-10" href="#" data-toggle="modal" data-target="#reset-popup">{{ 'home.login.forgot_password.button'|trans }}</a>
    </div>
    <div class="center-align margin-top-10">
        <button type="submit" id="_submit" name="_submit" class="btn btn-primary width-parent">{{ 'home.login.submit.button'|trans }}</button>
        <a class="btn btn-default width-parent margin-top-10" href="{{ path('fos_user_registration_register') }}">{{ 'home.login.register.button'|trans }}</a>
    </div>     
</form>

<div class="modal fade" id="reset-popup">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="card-name">{{ 'request.title'|trans }}</h4>
            </div>
            <div class="modal-body">
                {{ render(controller('FOSUserBundle:Resetting:request', {'invalid_username' : invalid_username})) }}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->