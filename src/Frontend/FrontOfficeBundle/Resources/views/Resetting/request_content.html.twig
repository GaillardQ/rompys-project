{% trans_default_domain 'templatesTranslations' %}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal center-align" role="form">
            {% if invalid_username is defined and invalid_username is not null %}
                <div class="alert alert-block alert-danger fade in">
                    {{ 'reset_password.invalid_email'|trans({'%username%': invalid_username}) }}
                </div>
            {% endif %}
            <div class="row space-under-30 left-align">
                <label class="control-label col-xs-12 col-sm-2 col-md-2 col-lg-2 orange-color" for="username">{{ 'reset_password.email'|trans }}</label>
                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
                    <input type="text" id="username" name="username" value="" class="form-control">
                </div>
            </div>
            <button class='btn btn-primary' type="submit">{{ 'reset_password.submit'|trans }}</button>
        </form>
    </div>
</div>
    
