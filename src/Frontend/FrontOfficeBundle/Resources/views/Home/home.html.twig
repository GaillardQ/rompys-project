{% extends 'FrontendFrontOfficeBundle::baseFrontend.html.twig' %}
{% trans_default_domain 'templatesTranslations' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="public/js/page/home.js"></script>
{% endblock %}

{% block body %}
    <div id="home" class="row home">
        <div class="col-md-6 col-md-push-3 col-lg-8 col-lg-push-2">
            <div id="home-center" class="row home-block home-center-div">
                {{ include ('FrontendFrontOfficeBundle:Home:home_center.html.twig') }}
            </div>
        </div>
        <div class="col-md-3 col-md-pull-6 col-lg-2 col-lg-pull-8">
            <div id="home-left-top" class="row home-block home-side-div">
                {{ include ('FrontendFrontOfficeBundle:Home:home_login.html.twig', {'invalid_username' : invalid_username, 'user':user, 'games':games}) }}
            </div>
            
            <div id="home-left-bottom" class="row home-block home-side-div">
                {{ include ('FrontendFrontOfficeBundle:Home:home_news.html.twig') }}
            </div>
        </div>
        <div class="col-md-3 col-lg-2">
            <div id="home-right-top" class="row home-block home-side-div">
                {{ include ('FrontendFrontOfficeBundle:Home:home_last_adds.html.twig') }}
            </div>
            <div id="home-right-bottom" class="row home-block home-side-div">
                {{ include ('FrontendFrontOfficeBundle:Home:home_best_sellers.html.twig') }}
            </div>
        </div>
    </div>
    
{% endblock %}