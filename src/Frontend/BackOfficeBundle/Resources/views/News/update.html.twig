{% extends 'FrontendBackOfficeBundle::baseMenu.html.twig' %}
{% trans_default_domain 'templatesTranslations' %}

{% block body %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        News <small>Administration</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-newspaper-o"></i> 
                            <a href="{{ path('frontend_back_office_news') }}">News</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-pencil"></i> 
                            Edition
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <div class="row">
                            <label class="control-label col-lg-12 margin-right-5">{{ form_label(form.title) }}</label>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="control-label col-lg-12 margin-right-5">{{ form_label(form.content) }}</label>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="row">
                                    <label class="control-label col-lg-12 margin-right-5">{{ form_label(form.dateStart) }}</label>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row align-center">
                                            {{ form_widget(form.dateStart, { 'attr': {'class': ''} }) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="row">
                                    <label class="control-label col-lg-12 margin-right-5">{{ form_label(form.dateEnd) }}</label>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row align-center">
                                            {{ form_widget(form.dateEnd, { 'attr': {'class': ''} }) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group align-center">
                        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary'} }) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}