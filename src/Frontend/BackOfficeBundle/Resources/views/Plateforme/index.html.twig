{% extends 'FrontendBackOfficeBundle::baseMenu.html.twig' %}
{% trans_default_domain 'templatesTranslations' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/bo/js/plateform.js"></script>
{% endblock %}

{% block body %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Plateformes <small>Administration</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-gamepad"></i> Plateformes
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="row margin-bottom-20 align-center">
                        <a class="btn btn-primary" href="{{ path('frontend_back_office_plateformes_create') }}">
                            <i class="fa fa-plus"></i> Ajouter une plateforme
                        </a>
                    </div>
                    <div class="row">
                        <!-- Table -->
                        <table id="table-all-plateforms" class="table tablesorter">
                            <thead>
                                <tr>
                                    <th class="name">{{ 'bo.plateforms.name'|trans }}</th>
                                    <th class="update align-center" data-toggle="tooltip" title="{{ 'bo.plateforms.update'|trans }}"><span class="glyphicon glyphicon-pencil"></span></th>
                                    <th class="delete align-center" data-toggle="tooltip" title="{{ 'bo.plateforms.delete'|trans }}"><span class="glyphicon glyphicon-trash"></span></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for p in plateforms %}
                                    <tr>
                                        <td class="name">{{ p.value }}</td>
                                        <td class="update align-center" data-toggle="tooltip" title="{{ 'bo.plateforms.update'|trans }}">
                                            <a href="{{ path('frontend_back_office_plateformes_update', {'id': p.id, 'name':p.value|url_encode, 'hash':p.hash}) }}">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                        </td>
                                        <td class="delete align-center" data-toggle="tooltip" title="{{ 'bo.plateforms.delete'|trans }}">
                                            <a href="{{ path('frontend_back_office_plateformes_delete', {'id': p.id, 'name':p.value|url_encode, 'hash':p.hash}) }}">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}